<!doctype html>
<html>

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body>

    <main class="h-screen w-full text-white p-10 bg-zinc-900">

        <h1 class="font-extrabold text-4xl">Create Notes!</h1>

        <form action="/create" method="post">
            <input name="title" class="outline-none border-2 border-zinc-600 w-full mt-10 p-4 rounded-lg" type="text"
                placeholder="title goes here...">

            <textarea name="description" class="outline-none border-2 border-zinc-600 w-full mt-10 p-4 rounded-lg"
                placeholder="description"></textarea>

            <button class="px-4 py-2 rounded-lg bg-blue-500 hover:bg-blue-600 font-smibold text-xl mt-5">Create
                Notes!</button>

        </form>


        <div class="cardContainer mt-10 flex gap-10 text-white flex-wrap">



           <% if(files.length > 0){ %>
               <% files.forEach((items)=>{ %>
                    <div class="card bg-orange-100 w-[15vw] p-10 rounded-lg">
                        <h3 class="text-xl font-bold text-zinc-800">@<%= items %></h3>
                        <a href="/files/<%= items %>" class="text-blue-500 hover:text-blue-700">read more...</a>

                        <div class="flex justify-between pt-2">
                            <a class="text-zinc-800" href="">Edit</a>
                            <a class="text-zinc-800" href="/delete/files/<%= items %>">Delete</a>
                        </div>
                    </div>
               <% }) %>
           <% }else{ %>
                <h1 class="text-3xl text-zinc-600">No Notes Yet!</h1>
           <% } %>

            

        </div>

    </main>

</body>

</html>